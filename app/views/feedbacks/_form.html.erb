<div class="card my-4">
  <div class="card-body">
    <%= form_with model: Feedback.new, url: feedbacks_path, local: false do |f| %>
      
      <div class="row mb-3 align-items-center">
        <div class="col-3">
          <%= f.label :event_id, "Event", class: "form-label" %>
        </div>
        <div class="col-9">
          <%= f.collection_select :event_id, @events, :id, :name, {}, { class: "form-select" } %>
        </div>
      </div>

      <%= render 'star_rating', f: f %>

      <div class="row mb-3 align-items-center">
        <div class="col-sm-3">
          <%= f.label :comment, 'Feedback', class: "form-label" %>
        </div>
        <div class="col-sm-9">
          <%= f.text_area :comment, class: "form-control" %>
        </div>
      </div>

      <div class="d-flex justify-content-end">
        <%= f.submit "Submit Feedback", class: "btn btn-primary" %>
      </div>
    
    <% end %>
  </div>
</div>
